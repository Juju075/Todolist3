{% extends 'layouts/base.html.twig' %} {% block header_img %}
<img
  class="slide-image"
  src="{{ asset('img/todolist_content.jpg') }}"
  alt="todo list"
/>{% endblock %} {% block body %}
<a href="{{ path('task_create') }}" class="btn btn-info pull-right"
  >Create task</a
>
<div class="row">
  <h1>Admin index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
      <tr>
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        <td>
          <button class="btn btn-success pull-right" type="button">
            <a href="{{ path('app_admin_user_edit', { id: user.id }) }}"
              >edit</a
            >
          </button>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="6">no records found</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
